<html>

<style type="text/css">

hr {
	border-color: white;
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Lato', sans-serif;
}
p, div {
    font-family: 'Lato', sans-serif;
   	
}
.signed-in-body {
	background-color: #FFFFFF;
		background-size: 100% 100%;
   		background-repeat: no-repeat;
		background-attachment: fixed;
}
.not-signed-in-body {
	background-color: #FFFFFF;
		background-size: 100% 100%;
   		background-repeat: no-repeat;
		background-attachment: fixed;
}

.first-buttons {
	margin-left: 60%;
	margin-top: 10%;
}

.intro-info {
	opacity: 0.85;
    filter: alpha(opacity=85);
    background-color: black;
    height: 350px;
    padding-left: 20px;
    padding-top: 10px;
    color: white;
    border-style: solid;
    border-color: darkgray;
    border-width: 1px;
}

.indent-1 {
	margin-left: 50px;
}

.indent-2 {
    color: black;
}

.first-half {
	color: #000000;
	font-size: 40px;
}

.second-half {
	color: #3B5998;
	font-size: 30px;
}

.content-background {
	background-color: #f1f1f1;
	border-radius: 3px;
	color: black;
	padding: 10px;
}

.fake-player {
	border-style: solid;
	border-color: #3D3D3D;
	padding: 15px;
	background-color: #F1F1F1;
	height: 100px;
	border-width: 1px;
	color: #ABABAB;
}

.play-btn {
	border-radius: 30px;
	border-style: solid;
	width: 60px;
	padding: 10px;
	font-size: 35px;
	color: #3D3D3D;
	padding-left: 12px;
	border-width: 2px;
}

.play-btn:hover {
	border-radius: 30px;
	border-style: solid;
	width: 60px;
	padding: 10px;
	font-size: 35px;
	color: #FFFFFF;
	padding-left: 12px;
	border-width: 2px;
	background-color: #3D3D3D;
}


.audio-around {
	border-style: solid;
	border-width: 1px;
	border-radius: 4px;
	padding-left: 0px;
	padding-top: 0px;
	height: 125px;
	background-color: #F7F7FF;
	background-image: url('../assets/css-gradient-background.png');
	background-size: 100% 100%;
	
}

.audio-widget {
	width: 100%;
	background-color: #000000;

}

.song-content {
	padding-left: 10px;
	color: white;
}


.box-shadow--2dp {
    box-shadow: 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .2), 0 1px 5px 0 rgba(0, 0, 0, .12)
}
.box-shadow--3dp {
    box-shadow: 0 3px 4px 0 rgba(0, 0, 0, .14), 0 3px 3px -2px rgba(0, 0, 0, .2), 0 1px 8px 0 rgba(0, 0, 0, .12)
}
.box-shadow--4dp {
    box-shadow: 0 4px 5px 0 rgba(0, 0, 0, .14), 0 1px 10px 0 rgba(0, 0, 0, .12), 0 2px 4px -1px rgba(0, 0, 0, .2)
}
.box-shadow--6dp {
    box-shadow: 0 6px 10px 0 rgba(0, 0, 0, .14), 0 1px 18px 0 rgba(0, 0, 0, .12), 0 3px 5px -1px rgba(0, 0, 0, .2)
}
.box-shadow--8dp {
    box-shadow: 0 8px 10px 1px rgba(0, 0, 0, .14), 0 3px 14px 2px rgba(0, 0, 0, .12), 0 5px 5px -3px rgba(0, 0, 0, .2)
}
.box-shadow--16dp {
    box-shadow: 0 16px 24px 2px rgba(0, 0, 0, .14), 0 6px 30px 5px rgba(0, 0, 0, .12), 0 8px 10px -5px rgba(0, 0, 0, .2)
}	



</style>





<!-- ============ IF NO ONE IS SIGNED IN ===========-->


<% if current_user == nil %>

<body class="not-signed-in-body">
	<div class="container not-signed-in-body">
		<div class="row">
			<div class="col-sm-6">
				<span class="first-half">Aim</span><span class="second-half">uzer</span>
				<br>
					<span style="color: #ABABAB;">Let's Discover, Together</span>
						
			</div> <!-- col-lg-6 -->

			<div class="col-sm-6">
						<div class="first-buttons">
						<%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-md' %>

						<%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary btn-md', :style => 'margin-left: 25px; width: 90px;' %>
						</div> <!-- first buttons -->
			</div> <!-- col-sm-6 -->

		</div> <!-- row -->
						<hr style="border-color: #3B5998;">
<!-- ======== Top portion with log buttons and header =========-->

	</div><!-- container not sign in body -->	

	






					
</body>

<!-- ============ IF NO ONE IS SIGNED IN ===========-->

<!-- -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- -->

<!-- ============ IF SOMEONE IS SIGNED IN ===========-->

<% else %>



<body class="signed-in-body">

	<div class="container">
		<div class="row">
			 <div class="col-sm-4">
					<span class="first-half">Aim</span><span class="second-half">uzer</span>
					<br>
						<span style="color: #ABABAB;">Let's Discover, Together</span>
							
				</div> <!-- col-lg-4 -->

			<div class="col-sm-8">

			</div>
			
		</div> <!-- row -->
			<hr style="border-color: #3B5998;">
		<div class="row">
			<div class="col-sm-7 content-background">
				
				<% @tracks.each do |x| %>
					<div class="audio-around box-shadow--6dp">
					<audio controls class="audio-widget">
					  <source src="<%= x.track %>" type="audio/mpeg">
					Your browser does not support the audio element.
					</audio>

					<div class="song-content">

					<h4 style="color: black;"><b><%= x.title %></b></h4>
					<h6 style="color: black;"><em><b><%= x.description %></b></em></h6>

					</div><!-- song content -->
					</div><!-- audio-around -->
					<br><br>
				<% end %>
				</div>

			<div class="col-sm-4">

			</div> <!-- col-sm-4 -->


		</div> <!-- row -->


	</div> <!-- container -->
</body>

<% end %>

<!-- ============ IF SOMEONE IS SIGNED IN ===========-->

</html>








