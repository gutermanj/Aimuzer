<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h1>Upload A New Track</h1>

			<%= form_for @track, as: :track, url: user_tracks_path(current_user), html: { multipart: true } do |f| %>
				  <p>
				    <%= f.label :title, :class => 'control-label' %>
				    <%= f.text_field :title, :class => 'form-control' %>
				    <br><br>
				    <%= f.label :artist, :class => 'control-label' %>
				    <%= f.text_field :artist, :class => 'form-control' %>
				    <br><br>
				    <%= f.label :description, :class => 'control-label' %>
				    <%= f.text_area :description, :class => 'form-control' %>
				    <br><br>
				    <%= f.file_field :track, :accept => '.mp3', :class => 'form-control' %>
				    <br><br>
				    <%= f.hidden_field :track_cache %>
				    <br>
				    <button type="submit" class="btn btn-primary form-control upload-btn" data-user-id="<%= current_user.id %>">Upload</button>
				  </p>
				<% end %>
		</div> <!-- col-sm-6 -->
	</div> <!-- row -->
</div> <!-- container -->


